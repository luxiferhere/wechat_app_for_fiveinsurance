/* pages/index/index.wxss */

/* ---------------------------- 全局容器 ---------------------------- */
.container {
  padding: 30rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

/* ---------------------------- 输入区域 ---------------------------- */
.area_view {
  margin: 20rpx 0;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.area_text {
  color: #606266;
  font-weight: 200;
  flex-shrink: 0;
}

.area_input {
  width: 60%;
  height: 80rpx;
  border: 1rpx solid #dcdfe6;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  transition: border-color 0.3s;
  line-height: 82rpx
}

/* ---------------------------- 按钮组 ---------------------------- */
.compute_button {
  margin: 40rpx 0;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.compute_button button {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  transition: all 0.3s;
}

.compute_button .left {
  background: #409eff;
  color: white;
}

.compute_button .right {
  background: #f56c6c;
  color: white;
}

/* ---------------------------- 社保明细列表 ---------------------------- */
.insurance_title {
  padding: 30rpx;
  background: #fff;
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  font-weight: bold;
  color: #303133;
}

.insurance_item {
  padding: 30rpx;
  background: #fff;
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  align-items: center;
  border-bottom: 1rpx solid #ebeef5;
}

.item_text {
  color: #606266;
}

/* ---------------------------- 总计区域 ---------------------------- */
.total {
  padding: 30rpx;
  background: #fff;
  border-radius: 0 0 16rpx 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  font-weight: bold;
}

.people_total { color: #67c23a; }
.compony_total { color: #e6a23c; }

/* ---------------------------- 交互动效 ---------------------------- */
button.hover {
  opacity: 0.8;
  transform: translateY(-2rpx);
}

.area_input:focus {
  border-color: #409eff;
}

