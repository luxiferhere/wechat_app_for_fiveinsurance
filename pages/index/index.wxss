/* --------------- 比例输入框样式 --------------- */
.people_ins input, .compony_ins input {
  width: 40rpx;              /* 输入框宽度 */
  height: 40rpx;
  border: 2rpx solid #409EFF; /* 蓝色边框强调可编辑性 */
  border-radius: 8rpx;        /* 圆角 */
  padding: 0 20rpx;
  text-align: center;         /* 文字居中 */
  font-size: 28rpx;
  color: #303133;
  background: #fff;
  transition: all 0.3s;      /* 过渡动画 */
}

/* 聚焦状态强化提示 */
.people_ins input:focus, .compony_ins input:focus {
  border-color: #007acc;      /* 深蓝色 */
  box-shadow: 0 0 10rpx rgba(64, 158, 255, 0.2); /* 发光效果 */
}
/* 输入框与符号容器 */
.input_group {
  display: flex;       /* 启用弹性布局 */
  align-items: center; /* 垂直居中 */
  gap: 8rpx;           /* 元素间距 */
}

/* 输入框样式 */
.percentage_input {
